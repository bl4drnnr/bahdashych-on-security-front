{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "strictPropertyInitialization": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@components/*": [
        "src/app/components/*",
        "src/app/components/basic-components/*",
        "src/app/components/pages-components/*",
        "src/app/components/layout-components/*",
        "src/app/components/dashboard-components/*"
      ],
      "@env/*": ["src/app/environments/*"],
      "@pages/*": [
        "src/app/pages/*"
      ],
      "@shared/*": [
        "src/app/shared/*",
        "src/app/shared/api/*",
        "src/app/shared/global-components-services/*"
      ],
      "@interfaces/*": [
        "src/libs/interfaces/*",
        "src/libs/interfaces/components/*",
        "src/libs/interfaces/pages/*",
        "src/libs/interfaces/api/*",
        "src/libs/types/components/*",
        "src/libs/types/api/*",
        "src/libs/types/translations/*",
        "src/libs/api/controllers/*",
        "src/libs/api/endpoints/*",
        "src/libs/api/methods/*",
        "src/libs/api/errors/*",
        "src/libs/enums/api/*"
      ],
      "@layouts/*": ["src/app/layouts/*"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
