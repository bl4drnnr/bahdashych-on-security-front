{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/basic-components/*",
        "src/components/layout-components/*",
        "src/components/page-components/*"
      ],
      "@styles/*": [
        "src/styles/basic-components/*",
        "src/styles/layout-components/*",
        "src/styles/page-components/*",
        "src/styles/themes/*",
        "src/styles/layouts/*",
        "src/styles/pages/*",
        "src/styles/*"
      ],
      "@lib/*": ["src/lib/*"],
      "@i18config": ["next-i18next.config.js"],
      "@layouts/*": ["src/layouts/*"],
      "@store/*": ["src/store/*"],
      "@hooks/*": ["src/hooks/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src"],
  "exclude": ["node_modules"]
}
